<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>

<div id="wrapper">
  <div id="header" class="panels">
    <%= image_tag current_user.avatar.url, class: 'usr_avatar' %>
  </div>

  <div class="navbar-fixed-top" id="name">
      <h2 class="">
        <%= current_user.compound_name %>
      </h2>
  </div>

  <div id="b" class="panels card-group">
    <div class="card" style="background-color: white">
      <h3 class="p-x-1">Estado de documentos</h3>
      <% if !current_user.administrador? %>
          <%= pie_chart current_user.documents.all.group(:status).count.map { |k, v| [Document.statuses.key(k).to_s.titleize, v] }%>
      <% else %>
          <%= pie_chart Document.all.group(:status).count.map { |k, v| [Document.statuses.key(k).to_s.titleize, v] } %>
      <% end %>
      <p class="card-text">Total del documentos:<%= current_user.documents.all.count %></p>
      <ul class="nav nav-pills">
        <li class="active"><a href="javascript:void(0)">Home <span class="badge">42</span></a></li>
        <li><a href="javascript:void(0)">Profile <span class="badge"></span></a></li>
        <li><a href="javascript:void(0)">Messages <span class="badge">3</span></a></li>
      </ul>
    </div>
    <div class="card p-x-1">
      <h3>Actividad por d√≠a</h3>
      <%= line_chart current_user.documents.all.group_by_day(:created_at).count %>
    </div>
  </div>
  <div class="panels">

  </div>

</div>
<%= render 'layouts/bottom_menu' %>
<%= link_to edit_user_registration_path, class: 'btn btn-success  btn-fab pull-right' do%>
    <i class="material-icons">edit</i>
<% end %>

