<div class="container">
    <h2 class="p-t-3">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), layout: :basic) do |f| %>

          <%= f.email_field :email, autofocus: true %>

        <div class="field">
          <%= f.password_field :password, autocomplete: 'off' %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit 'Log in' %>
        </div>
      </fieldset>
    <% end %>


    <%= render 'devise/shared/links' %>
<!--/container-->
</div>