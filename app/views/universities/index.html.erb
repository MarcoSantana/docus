<div class="container m-t-3">
  <h2 class="muted">Mis universidades</h2>

<% @universities.each_slice(3) do |university| %>

<div class="card-group">
  <% university.each do |uni_col| -%>
    <div class="card">
      <%= link_to uni_col do %>
      <%= image_tag uni_col.logo.url(:medium), class: 'img-responsive card-img-top img-thumbnail center-block' %>
      <% end %>
      <div class="card-block">
        <h4 class="card-title text-xs-center"><%= uni_col.name %></h4>
        <p class="card-text text-muted text-xs-center"><%= uni_col.name_short %></p>
        <div class="" style="position: absolute; bottom:0;">
          <!--
          <%= link_to uni_col, class:'btn btn-sm btn-info' do %>
          <%= icon :eye, library: :font_awesome, class: 'fa', id: 'icon', data: {value: 1} %>
          Ver
          <% end %>
          -->
          <%= link_to edit_university_path(uni_col), class:'btn btn-sm btn-success' do %>
            <%= icon :pencil, library: :font_awesome, class: 'fa', id: 'icon', data: {value: 1} %>
          <% end %>
          <%= link_to uni_col, method: :delete, data: { confirm: 'Â¿EstÃ¡ seguro?' }, class: 'btn btn-sm btn-danger' do %>
            <%= icon :trash, library: :font_awesome, class: 'fa', id: 'icon', data: {value: 1} %>
          <% end %>
        </div>
      </div>
    </div>
<% end %>
</div>

<% end %>
  <div class="card">
    <p class="block-center">
      <%= paginate @universities %>
      <%= page_entries_info @universities %>
    </p>
  </div>
  <%= link_to new_university_path, class: 'btn btn-success' do%>
  <%= icon :university, library: :font_awesome, class: 'fa-2x', id: 'icon', data: {value: 1} %>Crear universidad nueva
  <% end %>
  <%= modal title: "#{icon :university, library: :font_awesome, class: 'fa-2x', id: 'icon', data: {value: 1}}", size: :large, id: 'modal', button: {class: 'btn-sm btn-success'} do %>

  <% end %>
</div>
