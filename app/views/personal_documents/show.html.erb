 <div class="col-md-4 col-md-offset-4 m-y-3">
    <div class="card text-xs-center">
      <%= image_tag @personal_document.image.url, class: 'card-img-top img-fluid img-center p-x-3' %>
      <div class="card-block ">
        <h4 class="card-title text-<%= @personal_document.status_style %>"><%= @personal_document.status.humanize %><small>
          <i class="material-icons text-<%= @personal_document.status_style %>">insert_drive_file</i>
        </small><%= @personal_document.to_s %></h4>
        <p class="card-text"><%= @personal_document.description.humanize %></p>
        <p class="card-text text-muted">Creado en <small class="text-muted"><%= @personal_document.created_at %></small></p>
        <% unless @personal_document.status == 'aceptado' %>
            <p class="card-text"> <%= @personal_document.comentary %> </p>
      <% end %>

        <div class="card-block m-b-1">
          <%= link_to  @personal_document, class: 'btn btn-danger btn-fab pull-right', method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="material-icons">delete</i>
          <% end %>

          <div class="pull-left m-b-2">
            <%= link_to edit_personal_document_path(@personal_document), class: 'btn btn-success btn-fab' do %>
                <i class="material-icons">edit</i>
            <% end  %>
            <%= link_to  personal_documents_path, class: 'btn btn-info btn-fab' do %>
                <i class="material-icons">keyboard_arrow_left</i>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
